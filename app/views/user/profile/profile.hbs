<div>
    <div class="text-center">
        <img src="https://graph.facebook.com/{{externalId}}/picture?type=normal" class="img-circle" />
        <br><br>
        <p>
            <i class="fa fa-star rating-filled"></i>
            <i class="fa fa-star rating-filled"></i>
            <i class="fa fa-star rating-filled"></i>
            <i class="fa fa-star rating-filled"></i>
            <i class="fa fa-star rating-empty"></i>
        </p>
        <h3>{{firstName}} {{lastName}}</h3>
        <p>{{email}}</p>
    </div>
    <hr>
    <p>{{description}}</p>
    <hr>
    <em class="small">Member since {{{date created 'YYYY-MM-DD'}}}</em>
    <br><br>
    <a href="https://www.facebook.com/{{externalId}}" class="btn btn-block btn-primary"><i class="fa fa-facebook-square"></i> Show on Facebook</a>
    <br><br>
    <button class="btn btn-block btn-default js-logout">Log out</button>
</div>