<div class="panel panel-default" style="background: url({{blob eventImages}}); background-size: 100%;">
    <div class="panel-body">
        <h3><a href="/event/{{id}}">{{title}}</a></h3>
        <p class="text-muted">
            {{#each categories}}
               <em>{{name}}</em>
            {{/each}}
        </p>
        <p>{{description}}</p>
    </div>
    <div class="panel-footer">
        Host: {{user.firstName}} {{user.lastName}} &nbsp;&bull;&nbsp; Seats: {{slots}} &nbsp;&bull;&nbsp; Price: {{price}} SEK
    </div>
</div>