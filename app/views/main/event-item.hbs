<a href="/event/{{id}}">
    <div class="panel panel-default">
        <div class="panel-body" style="background: url({{blob eventImages}}); background-size: 100%;">
            <div class="row">
                <div class="col-xs-6">
                    <img src="https://graph.facebook.com/{{user.externalId}}/picture?type=square" class="img-circle" />
                </div>
                <div class="col-xs-6 text-right">
                    {{slots}} / {{slots}}
                    <br><br>
                    {{location.city}}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-6">
                    <strong>{{title}}</strong><br>
                    {{#each categories}}
                        {{name}}
                    {{/each}}
                </div>
                <div class="col-xs-6 text-right">
                    <strong>{{{date start 'lll'}}}</strong><br>
                    {{price}} SEK
                </div>
            </div>
        </div>
    </div>
</a>